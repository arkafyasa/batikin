<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="com.batikin.vocomfest.batikin.Pemesanan">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--INSERT LAYOUT CODE HERE-->
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/infoContainer"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:text="Anda Memesan :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/imgModel"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/dummy_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/modelmodel"
                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/short_sleeve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imgMotifPesan"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/dummy_motif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:layout_weight="1"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/modeltxt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="Model"
                        android:textColor="@color/brownDark"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/motiftxt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="Motif batik "
                        android:textColor="@color/brownDark"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_column="1"
                        android:layout_row="0"
                        android:textStyle="bold"
                        android:textColor="@color/brownDark"
                        android:textSize="15dp"
                        android:text=":"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_column="1"
                        android:layout_row="1"
                        android:textStyle="bold"
                        android:textColor="@color/brownDark"
                        android:textSize="15dp"
                        android:text=":"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtmodel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:text="Kemeja Sa.."
                        android:textColor="@color/brownDark"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtmotif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:text="Jawa01"
                        android:textColor="@color/brownDark"
                        android:textSize="15dp" />
                </GridLayout>

                <TextView
                    android:id="@+id/txtTotalHarga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Harga :\nRp. 200000"
                    android:textColor="@color/brownDark"
                    android:textSize="20dp" />
            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/brownDark"
                android:textSize="15dp"
                android:text="Deskripsi dan Filosofi Motif Batik :  "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lipsum_paragraph"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnKembali"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:text="KEMBALI"
                android:background="#ff0808"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <Button
                android:id="@+id/btnNext"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:text="LANJUT"
                android:background="#39ff56"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/drawerPane"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <!-- Profile Box -->

        <LinearLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/dummy_batik_bg_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp" >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/viewImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/blank_profile"
                app:civ_border_color="#c2c2c2"
                app:civ_border_width="3dp" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Your Profile"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#FFF" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
