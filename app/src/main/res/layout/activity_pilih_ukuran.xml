<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.batikin.vocomfest.batikin.PilihUkuran">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgSleeve"
            android:layout_weight="1"
            android:src="@drawable/short_sleeve"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/btnStandar"
                android:padding="9dp"
                android:layout_marginBottom="10dp"
                android:background="@color/brownLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_alignParentStart="true"
                    android:text="Standar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linearlayoutSize"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtS"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtM"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtL"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtXL"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="XL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtXXL"
                    android:layout_marginRight="15dp"
                    android:padding="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="XXL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/btnCustom"
                android:padding="9dp"
                android:layout_marginTop="10dp"
                android:background="@color/brownLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_alignParentStart="true"
                    android:text="Custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textColor="@color/brownDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="Total Harga : Rp. 0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnKembali"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:text="KEMBALI"
                android:background="#ff0808"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <Button
                android:id="@+id/btnNext"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:text="LANJUT"
                android:background="#39ff56"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/drawerPane"
        android:layout_gravity="start"
        android:layout_width="280dp"
        android:layout_height="match_parent">

        <!-- Profile Box -->

        <LinearLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/dummy_batik_bg_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp" >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/viewImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/blank_profile"
                app:civ_border_color="#c2c2c2"
                app:civ_border_width="3dp" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Your Profile"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#FFF" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
