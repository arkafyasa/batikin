<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.batikin.vocomfest.batikin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splashscreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomePage" />
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityAccount" />
        <activity android:name=".ActivityBantuan" />
        <activity android:name=".ActivityRiwayat" />
        <activity android:name=".ActivityPengaturan" />

        <activity android:name=".ModelPage">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".SelectSleeve" />
        <activity android:name=".PilihUkuran" />
        <activity android:name=".AddDesign" />
        <activity android:name=".PilihMotif" />
        <activity android:name=".Pemesanan" />
        <activity android:name=".InformasiPengiriman" />
        <activity android:name=".PesananAnda" />
        <activity android:name=".InstruksiPembayaran" />
        <activity android:name=".ActivityRegister"></activity>
    </application>

</manifest>